{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Arduino: Verify",
            "type": "shell",
            "command": "arduino-cli",
            "args": [
                "compile",
                "--fqbn",
                "arduino:avr:mega",
                "${workspaceFolder}/controller/Car/Car.ino"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Arduino: Upload",
            "type": "shell",
            "command": "arduino-cli",
            "args": [
                "upload",
                "--fqbn",
                "arduino:avr:mega",
                "--port",
                "COM14",
                "${workspaceFolder}/controller/Car/Car.ino"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            }
        }
    ]
}
